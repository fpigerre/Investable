<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="responsive-container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
              data-target="#navbar-main">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= image_tag('logo.png', class: 'logo') %>
      <p class="username">
        <%= current_user.name %>
      </p>
      <%= link_to 'Investable', user_root_path, class: 'brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-main">
      <ul class="nav navbar-nav navbar-right">
        <%= form_tag(search_path, :method => 'get', class: 'navbar-form navbar-left', role: 'search') do %>
            <div class="form-group">
              <%= text_field_tag :search, params[:search], placeholder: 'Find a stock', class: 'form-control rounded-corners', type: 'text', id: 'search' %>
            </div>
            <%= submit_tag 'Search', :name => nil, class: 'btn btn-default rounded-corners', type: 'submit' %>
        <% end %>
        <li class="nav-icon"><%= link_to '', edit_user_registration_path, class: 'glyphicon glyphicon-wrench' %></li>
        <li class="nav-icon"><%= link_to('', destroy_user_session_path, :method => :delete, class: 'glyphicon glyphicon-log-out') %></li>
      </ul>
    </div>
  </div>
</nav>

<% if @results.count > 0 %>
    <div class="table-responsive" id="results">
      <table class="table table-hover">
        <tr class="table-heading">
          <th>Symbol</th>
          <th>Name</th>
          <th class="long-text">Stock Exchange</th>
        </tr>
        <% @results.each do |result| %>
            <tr data-link="<%= stock_path(result['symbol']) %>">
              <td><%= result['symbol'].to_s.gsub /"/, '' %></td>
              <td><%= result['name'].to_s.gsub /"/, '' %></td>
              <td><%= result['exch'].to_s.gsub /"/, '' %></td>
            </tr>
        <% end %>
      </table>
    </div>
<% else %>
    <div class="padded-div">
      <h1>No Results Found</h1>

      <p>Unfortunately, it seems that no companies or symbols match what was entered.
        Perhaps you might like to try a new query?</p>
    </div>
<% end %>