<!DOCTYPE html>
<html>
<head>
  <% content_for :styletags do %>
      <%= stylesheet_link_tag 'bitcoin', media: 'all', 'data-turbolinks-track' => true %>
  <% end %>

  <% content_for :jstags do %>
      <%= javascript_include_tag 'dygraph-combined.min', 'data-turbolinks-track' => true %>
  <% end %>
  <%= render 'partials/headtags' %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="responsive-container">
    <%= render 'partials/navheader' %>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-main">
      <ul class="nav navbar-nav links">
        <li><%= link_to 'Home', user_root_path %></li>
        <li><%= link_to 'Comparison', comparison_path %></li>
        <li><%= link_to 'Markets', markets_path %></li>
        <li class="active"><%= link_to 'BitCoin', bitcoin_path %></li>
      </ul>
      <%= render 'partials/rightnav' %>
    </div>
  </div>
</nav>

<div class="secondary-nav">
  <%= tabs %>
  <%= subtabs %>
</div>

<%= yield %>

</body>
</html>
