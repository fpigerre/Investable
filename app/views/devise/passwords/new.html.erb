<%= render 'devise/shared/nav' %>

<div class="center form-horizontal col-xs-6 col-md-4 col-xs-offset-4">
  <h2 class="header">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |form| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= form.label :email, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= form.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group col-sm-offset-2 col-sm-10">
        <%= form.submit 'Send me reset password instructions', class: 'btn btn-default' %>
      </div>
  <% end %>
</div>
