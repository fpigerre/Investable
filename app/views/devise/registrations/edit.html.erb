<%= render '/devise/shared/settings_nav' %>

<div class="content">
  <%= form_for(resource, as: resource_name, class: 'form-horizontal', url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control', type: 'password' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit 'Update', class: 'btn btn-default rounded-corners' %>
      </div>
  <% end %>

  <div class="cancel">
    <h3>Cancel my Account</h3>
    <a class="btn btn-danger rounded-corners" href="javascript:void(0)" onclick="document.getElementById('light').style.display='block';document.getElementById('fade').style.display='block'">Cancel
      my account</a>

    <div id="light" class="white_content">
      <a class="glyphicon glyphicon-remove" href="javascript:void(0)" onclick="document.getElementById('light').style.display='none';document.getElementById('fade').style.display='none'"></a>

      <h3>Are you sure you would like to permanently delete your account?</h3>
      <%= form_for(registration_path(resource_name), method: 'delete', class: 'delete-form form-horizontal') do |form| %>
          <div class="form-group">
            <%= text_field_tag(:password, params[:password], placeholder: 'Password', class: 'form-control rounded-corners', type: 'text', id: 'password') %>
            <%= form.submit "I'm sure", class: 'btn btn-default rounded-corners' %>
          </div>
      <% end %>
    </div>
    <div id="fade" class="black_overlay"></div>
  </div>
</div>